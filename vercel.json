{
  "rewrites": [
    {
      "source": "/status",
      "destination": "https://liveschool-status.vercel.app/status"
    },
    {
      "source": "/status/:path*",
      "destination": "https://liveschool-status.vercel.app/status/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/post-session",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/cron/sync-availability",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/session-prep",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/auto-attendance",
      "schedule": "45 * * * *"
    }
  ]
}
